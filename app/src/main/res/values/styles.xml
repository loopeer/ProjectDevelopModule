<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation"
              tools:targetApi="lollipop">0dp
        </item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="SingleItemStyle">
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--FlowLayout-->
    <style name="FlowDescStyle">
        <item name="android:textColor">@color/selector_text_color</item>
        <item name="android:textSize">@dimen/desc_text_size</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="LargeItemStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SingleTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
