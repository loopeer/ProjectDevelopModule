<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="?listPreferredItemHeight"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/bottom_dialog_medium_padding"
            android:textColor="@color/color_bottom_dialog_btn"
            android:paddingRight="@dimen/bottom_dialog_medium_padding"
            android:text="@string/common_cancel"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="?listPreferredItemHeight"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:background="?selectableItemBackground"
            android:paddingLeft="@dimen/bottom_dialog_medium_padding"
            android:paddingRight="@dimen/bottom_dialog_medium_padding"
            android:textColor="@color/color_bottom_dialog_btn"
            android:text="@string/common_sure"/>
    </FrameLayout>

    <include layout="@layout/view_divider_dash"/>

    <com.loopeer.addresspicker.AddressPickerView
        android:id="@+id/view_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/bottom_dialog_small_padding"/>

</LinearLayout>
