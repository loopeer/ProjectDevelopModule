<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">


    <com.loopeer.addresspicker.StringPicker
        android:id="@+id/picker_province"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/xxsmall_padding"
        android:layout_marginRight="@dimen/xxsmall_padding"/>

    <com.loopeer.addresspicker.StringPicker
        android:id="@+id/picker_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/xxsmall_padding"
        android:layout_marginRight="@dimen/xxsmall_padding"/>

    <com.loopeer.addresspicker.StringPicker
        android:id="@+id/picker_district"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/xxsmall_padding"
        android:layout_marginRight="@dimen/xxsmall_padding"/>
</LinearLayout>