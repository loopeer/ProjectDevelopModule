<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.laputapp.widget.ForegroundTextView
            android:id="@+id/btn_date_time_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingLeft="@dimen/bottom_dialog_medium_padding"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/bottom_dialog_medium_padding"
            android:paddingBottom="@dimen/bottom_dialog_medium_padding"
            android:text="@string/bottom_dialog_common_sure"
            android:textColor="@color/color_bottom_dialog_text_color_primary"/>

        <com.laputapp.widget.ForegroundTextView
            android:id="@+id/btn_date_time_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:foreground="?selectableItemBackground"
            android:paddingRight="@dimen/bottom_dialog_medium_padding"
            android:paddingLeft="30dp"
            android:paddingTop="@dimen/bottom_dialog_medium_padding"
            android:paddingBottom="@dimen/bottom_dialog_medium_padding"
            android:text="@string/bottom_dialog_common_sure"
            android:textColor="@color/color_bottom_dialog_text_color_primary"/>
    </FrameLayout>

    <include layout="@layout/view_divider_dash"/>

    <com.loopeer.android.apps.carloan.ui.widget.DateTimeView
        android:id="@+id/view_date_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showDateTimeView="dateView|timeView"
        android:padding="@dimen/bottom_dialog_medium_padding"/>

</LinearLayout>
