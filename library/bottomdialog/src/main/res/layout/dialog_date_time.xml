<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_date_time_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:paddingBottom="@dimen/bottom_dialog_medium_padding"
            android:paddingLeft="@dimen/bottom_dialog_medium_padding"
            android:paddingRight="@dimen/bottom_dialog_medium_padding"
            android:paddingTop="@dimen/bottom_dialog_medium_padding"
            android:text="@string/bottom_dialog_common_cancel"
            android:textColor="?android:textColorPrimary"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_date_time_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?selectableItemBackground"
            android:paddingBottom="@dimen/bottom_dialog_medium_padding"
            android:paddingLeft="@dimen/bottom_dialog_medium_padding"
            android:paddingRight="@dimen/bottom_dialog_medium_padding"
            android:paddingTop="@dimen/bottom_dialog_medium_padding"
            android:text="@string/bottom_dialog_common_sure"
            android:textColor="?android:textColorPrimary"/>
    </FrameLayout>

    <include layout="@layout/view_divider_dash"/>

    <com.loopeer.bottomdialog.DateTimeView
        android:id="@+id/view_date_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/bottom_dialog_medium_padding"
        app:showDateTimeView="dateView|timeView"/>

</LinearLayout>
